{
  "name": "blue-archive-story-viewer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build:json": "node ./CICD/build_json.mjs",
    "build": "pnpm build:json && vite build && cp ./dist/index.html ./dist/404.html",
    "build:github": "pnpm build:json && vite build --base=/blue-archive/ && cp ./dist/index.html ./dist/404.html",
    "preview": "pnpm build:json && vite preview --host",
    "check": "eslint --fix --config ./.eslintrc.json ./src/ ./CICD/ ./public/config/yaml/ --ext .js,.ts,.vue,.yml,.yaml && vue-tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.3.4",
    "@vueuse/core": "^10.7.2",
    "axios": "^1.6.7",
    "axios-retry": "^4.0.0",
    "ba-story-player": "workspace:*",
    "fastest-levenshtein": "^1.0.16",
    "gsap": "^3.12.5",
    "husky": "^8.0.3",
    "ismobilejs": "^1.1.1",
    "mitt": "^3.0.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "pinyin-pro": "^3.19.5",
    "typed.js": "^2.1.0",
    "vue": "^3.3.7",
    "vue-router": "^4.2.5",
    "xxhashjs": "^0.2.2",
    "tailwindcss": "~3.4.1",
    "autoprefixer": "~10.4.17",
    "dayjs": "~1.11.10",
    "element-plus": "^2.5.6"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@csstools/css-parser-algorithms": "^2.6.0",
    "@csstools/css-tokenizer": "^2.2.3",
    "@types/node": "^20.11.19",
    "@types/toastify-js": "^1.12.3",
    "@types/xxhashjs": "^0.2.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitejs/plugin-legacy": "^5.3.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-typescript": "^11.0.3",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-sort-exports": "^0.9.1",
    "eslint-plugin-vue": "^9.21.1",
    "eslint-plugin-yaml": "^0.5.0",
    "js-yaml": "^4.1.0",
    "postcss": "~8.4.35",
    "postcss-plugin-px2rem": "^0.8.1",
    "postcss-preset-env": "^9.4.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.71.0",
    "terser": "^5.27.2",
    "typescript": "^5.3.3",
    "vite": "5.1.3",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.19.0",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^1.8.27",
    "workbox-window": "^7.0.0",
    "ba-rig": "workspace:*"
  }
}
